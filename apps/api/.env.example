# Server
PORT=5050
PUBLIC_BASE_URL=http://localhost:5050
PANEL_ORIGIN=http://localhost:5173

# DB (Supabase Postgres). Use the connection string from Supabase -> Project Settings -> Database
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?schema=public"

# Auth
JWT_SECRET="change-me"
ADMIN_SEED_PASSWORD="admin123"
SELLER_SEED_PASSWORD="seller123"

# WhatsApp Cloud API
META_WA_TOKEN="EAAG..."
META_PHONE_NUMBER_ID="123456789012345"
META_VERIFY_TOKEN="your-verify-token"
META_APP_SECRET="your-app-secret"

# Webhook signature mode: required | optional
WEBHOOK_SIGNATURE_MODE=required

# Business logic
TZ=America/Argentina/Buenos_Aires
HUMAN_INACTIVITY_MINUTES=45
UNCLAIMED_HOT_LEAD_MINUTES=60

# Human working hours (local TZ)
# Example: Mon-Fri 09:00-18:00; Sat 10:00-13:00
HUMAN_WORKING_HOURS="Mon-Fri 09:00-18:00; Sat 10:00-13:00"

# Optional: allow bot to use LLM (not required). If blank, uses rules only.
OPENAI_API_KEY=

# Redis (Upstash recommended) - for BullMQ + Socket.IO scaling
# Example: rediss://default:<password>@<host>:<port>
REDIS_URL=

# Jobs / follow-ups
ENABLE_JOBS=true

# Supabase Storage (optional) - cache product images/PDFs server-side
SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_STORAGE_BUCKET="sector7"

